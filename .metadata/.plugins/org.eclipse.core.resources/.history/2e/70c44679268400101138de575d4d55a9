server:
  port: ${PORT:8081}

spring:
  application:
    name: menu-service

  datasource:
    url: ${DB_URL:jdbc:postgresql://localhost:5432/restaurant}
    username: ${DB_USER:appuser}
    password: ${DB_PASS:secret}
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: ${DDL_AUTO:update}         # npr. update / validate / none
    show-sql: ${SHOW_SQL:true}
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        default_schema: ${DB_SCHEMA:menu}  # svaka usluga može imati svoj šematski prostor

  rabbitmq:
    host: ${RABBIT_HOST:localhost}
    port: ${RABBIT_PORT:5672}
    username: ${RABBIT_USER:guest}
    password: ${RABBIT_PASS:guest}

# Ako neki servis (npr. order-service) zove menu-service, tamo koristi MENU_BASE_URL;
# ovde ostavljam varijablu samo ako ti treba za sopstvene interne pozive.
menu:
  base-url: ${MENU_BASE_URL:http://menu-service:8081}

eureka:
  client:
    service-url:
      defaultZone: ${EUREKA_URL:http://localhost:8761/eureka}
    register-with-eureka: ${EUREKA_REGISTER:true}
    fetch-registry: ${EUREKA_FETCH:true}
  instance:
    prefer-ip-address: ${EUREKA_PREFER_IP:true}

logging:
  level:
    org.springframework.amqp: ${AMQP_LOG:DEBUG}