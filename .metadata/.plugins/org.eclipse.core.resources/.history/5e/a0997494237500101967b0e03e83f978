package kitchen;

import org.springframework.amqp.rabbit.core.RabbitTemplate;
import org.springframework.stereotype.Service;

import events.OrderEventDto;
import kitchen.events.OrderQueues;

@Service
public class ReadyNotifier {

	private final RabbitTemplate rabbitTemplate;
	
	public ReadyNotifier(RabbitTemplate rabbitTemplate) {
		this.rabbitTemplate = rabbitTemplate;
	}
	
	public void sendOrderReady(OrderEventDto dto) {
		rabbitTemplate.convertAndSend(OrderQueues.ORDER_READY, dto);
	    System.out.println("[KITCHEN] Published ready event for orderId=" + dto.getOrderId());
	}
}
