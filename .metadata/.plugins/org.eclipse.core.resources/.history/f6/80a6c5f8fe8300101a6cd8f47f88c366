# ===== 1) Build stage =====
FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn -q -DskipTests package

# ===== 2) Run stage =====
FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /app/target/eureka-server-*.jar app.jar

EXPOSE 8761
ENTRYPOINT [ "sh", "-c", "java $JAVA_OPTS -jar app.jar" ]